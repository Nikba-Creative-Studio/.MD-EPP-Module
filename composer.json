{
    "name": "md-epp/sdk",
    "description": "PHP SDK for .MD EPP Server with Bootstrap 5 Sandbox",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "MD EPP SDK",
            "email": "dev@example.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-curl": "*",
        "ext-dom": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\Epp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8080 -t public"
    }
}
